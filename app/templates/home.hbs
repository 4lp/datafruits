<section class="flexbox-container">
  <PcNav
    @toggleSubMenu={{action "toggleSubMenu"}}
    @submenuOpen={{submenuOpen}}
  />
  <SpNav @toggleMenu={{action "toggleMenu"}} @menuOpen={{menuOpen}} />
  <LinkTo @route="home">
    <h1 id="logo">
      datafruits.fm
    </h1>
  </LinkTo>
  {{outlet}}
  <DatafruitsPlayer @nextShow={{model}}>
    <LocaleSelector
      @selectedLocale={{locale}}
      @setLocale={{action "setLocale"}}
    />
  </DatafruitsPlayer>
</section>
<DatafruitsVisuals />
<Notifications />
<WindowResizeHandler />
