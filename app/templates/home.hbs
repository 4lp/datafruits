<section class="h-handle-resize flex flex-col justify-between">
  <div class="flex bg-df-pink">
    <PcNav
      @toggleSubMenu={{action "toggleSubMenu"}}
      @submenuOpen={{submenuOpen}}
    />
    <SpNav @toggleMenu={{action "toggleMenu"}} @menuOpen={{menuOpen}} />
    <LinkTo
      class="hidden md:block"
      @route="home">
      <h1 class="logo font-debussy text-5xl text-white">
        {{t "site_title_fm"}}
      </h1>
    </LinkTo>
  </div>
  {{outlet}}
  <DatafruitsPlayer
    class="flex-col flex justify-center bg-df-pink text-xl py-5 text-white leading-none"
    @nextShow={{model}}>
    <DjDonateButton />
    <LocaleSelector
      @selectedLocale={{locale.value}}
      @setLocale={{action "setLocale"}}
    />
  </DatafruitsPlayer>
</section>
<DatafruitsVisuals />
<Notifications />
<WindowResizeHandler />
