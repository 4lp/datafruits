<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        {{#link-to 'application'}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>{{/link-to}}
        <h4 class="modal-title" id="myModalLabel">{{model.title}}</h4>
      </div>
      <div class="modal-body">
        {{#if model.thumb_image_url}}
          <div class="show-image">
            <img src="{{model.thumb_image_url}}"/ >
          </div>
        {{/if}}
        <p>
          {{model.description}}
        </p>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
