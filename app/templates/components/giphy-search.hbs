{{input type="text" id="giphy-search-term"
        placeholder="search for gifs..."
        autocomplete="off"
        value=searchTerm}}
{{#giphy-loader query=query as |loader|}}
  {{#if loader.isRunning}}
    <p>{{t "loading"}}</p>
  {{else}}
    {{#each loader.data as |gif|}}
      <img class="gif-preview" alt={{gif.name}} src="{{gif.previewUrl}}" {{action sendGif gif}} >
    {{/each}}
  {{/if}}
{{/giphy-loader}}
