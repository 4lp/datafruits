<div id="radio-player" data-icecast-json="https://streampusher-relay.club/status-json.xsl"></div>
<div id="jp_container">
  {{#if playingPodcast }}
    <a {{action "playLiveStream"}}>return to live stream</a>
  {{/if}}
  <a onMouseEnter={{action "playButtonMouseEnter"}}
     onMouseLeave={{action "playButtonMouseOut"}}
     class="jp-play" href="javascript:;" tabindex="1">▶︎</a>
  <a class="jp-pause" href="javascript:;" tabindex="1">❚❚</a>
  <a class="jp-loading" href="javascript:;" tabindex="1" style="display:none;">↻</a>
  {{#if error}}
    <span>{{error}}</span>
  {{else}}
    <span>Now playing: </span><span class="jp-title">{{title}}</span>
  {{/if}}
  {{#if playingPodcast }}
    <div class='jp-progress'>
      <div class='jp-seek-bar'>
        <div class='jp-play-bar'></div>
      </div>
    </div>
  {{else if nextShow}}
    <span id="next-show">Next live on air: {{#link-to 'home.show' nextShow}}{{nextShow.title}}{{/link-to}}</span>
  {{/if}}
  <span class="jp-volume-controls">
    <a class="jp-mute" href="javascript:;" tabindex="1"><i class="fa fa-volume-up"></i></a>
    <a class="jp-unmute" href="javascript:;" tabindex="1"><i class="fa fa-volume-off"></i></a>
    <div class="jp-volume-bar">
      <div class="jp-volume-bar-value"></div>
    </div>
  </span>
</div>
