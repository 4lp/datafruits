<audio preload="" id="radio-player">
  <source
    src="https://streampusher-relay.club/datafruits.mp3"
    type="audio/mp3"
  >
  <source
    src="https://streampusher-relay.club/datafruits.ogg"
    type="audio/ogg"
  >
</audio>
<div class="radio-container">
  <div class="player-controls">
    {{#if playingPodcast}}
      <a href="javascript:;" {{action "playLiveStream"}}>
        {{t "player.return_to_live"}}
      </a>
    {{/if}}
    {{#if loading}}
      <div class="player-loading">
      </div>
    {{else if playing}}
      <a {{action "pause"}}
        class="jp-pause"
        tabindex="1"
        title={{t "player.title.stop"}}>
        {{t (if this.playingPodcast "player.pause" "player.stop")}}
      </a>
    {{else if paused}}
      <a {{action "play"}}
        onMouseEnter={{action "playButtonMouseEnter"}}
        onMouseLeave={{action "playButtonMouseOut"}}
        class="jp-play"
        href="#"
        tabindex="1"
        {{!-- title={{t "player.title.play"}} --}}
        role="button"
        aria-label={{t "player.play_button_label"}}>
        {{t "player.play"}}
      </a>
    {{/if}}
    <label for="volume-control">{{t 'player.volume'}}</label>
    <span {{action "toggleVolumeControl" on="mouseEnter"}} {{action "toggleVolumeControl" on="mouseLeave"}}
      class="jp-volume-controls"
      role="button"
      name="volume-control"
    >
      {{#if muted}}
        {{!-- template-lint-disable no-nested-interactive --}}
        <a class="jp-unmute" tabindex="1" {{action "unmute"}} title={{t "player.title.unmute"}}>
          <i class="fa fa-volume-off"></i>
        </a>
      {{else}}
        <a class="jp-mute" tabindex="1" {{action "mute"}} title={{t "player.title.mute"}}>
          <i class="fa fa-volume-up"></i>
        </a>
      {{/if}}
      {{#if showingVolumeControl}}
        <input
          class="volume-control"
          type="range"
          min="0"
          max="1"
          step="0.1"
          oninput={{action "volumeChanged"}}
          value={{volume}}
        >
      {{/if}}
    </span>
  </div>
  <div class="now-playing">
    {{#if error}}
      <span>
        {{error}}
      </span>
    {{else}}
      <span class="jp-title" title={{t "player.title.now_playing"}}>
        {{title}}
      </span>
    {{/if}}
  </div>
  <div class="next-show-and-locale">
    {{#if nextShow}}
      <span id="next-show">
        {{t "next_broadcast"}}
        <LinkTo @route="home.show" @model={{nextShow}}>
          {{nextShow.title}}
        </LinkTo>
      </span>
    {{/if}}
    {{yield}}
  </div>
</div>
{{#if playingPodcast}}
  <div class="seek">
    <div class="seek-bar-wrapper">
      <input
        class="seek-bar"
        type="range"
        step="any"
        oninput={{action "seek"}}
        value={{playTime}}
      >
    </div>
  </div>
{{/if}}
