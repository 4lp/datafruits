{{title (t "djinquiry.title")}}
<div class="main-content">
  <h1 id="myModalLabel">
    <img src={{random-loading-spinner}} alt={{t "loading"}}>
    {{t "djinquiry.heading"}}
    <img src={{random-loading-spinner}} alt={{t "loading"}}>
  </h1>
  <div class="modal-body">
    <p>
      {{t "djinquiry.description"}}
    </p>
    {{#if model.isNew}}
      <div>
        {{#if model.errors}}
          <div class="error-message">
            {{t "djinquiry.error"}}
          </div>
        {{/if}}
        <form {{action "submit" on="submit"}}>
          <div>
            <label for="dj-form-email">
              {{t "djinquiry.email"}}
            </label>
          </div><div>
            <Input name="dj-form-email" id="dj-form-email" @value={{model.email}} />
            {{#if model.errors.email}}
              {{#each model.errors.email as |error|}}
                <div class="error">
                  <span>
                    {{error.message}}
                  </span>
                </div>
              {{/each}}
            {{/if}}
          </div><div>
            <label for="dj-form-username">
              {{t "djinquiry.username"}}
            </label>
          </div><div>
            <Input name="dj-form-username" id="dj-form-username" @value={{model.username}} />
            {{#if model.errors.username}}
              {{#each model.errors.username as |error|}}
                <div class="error">
                  <span>
                    {{error.message}}
                  </span>
                </div>
              {{/each}}
            {{/if}}
          </div><div>
            <label for="dj-form-mix">
              {{t "djinquiry.link_to_mix"}}
            </label>
          </div><div>
            <Input name="dj-form-mix" id="dj-form-mix" @value={{model.link}} />
            {{#if model.errors.link}}
              {{#each model.errors.link as |error|}}
                <div class="error">
                  <span>
                    {{error.message}}
                  </span>
                </div>
              {{/each}}
            {{/if}}
          </div><div>
            <label for="dj-form-url">
              {{t "djinquiry.homepage_url"}}
            </label>
          </div><div>
            <Input name="dj-form-url" id="dj-form-url" @value={{model.homepageUrl}} />
          </div><div>
            <label for="dj-form-interval">
              {{t "djinquiry.interval"}}
            </label>
          </div><div>
            <select name="dj-form-interval" id="dj-form-interval" onchange={{action "setInterval"}} value="target.value">
              {{#each intervals as |interval|}}
                {{#if (eq model.interval interval)}}
                  <option value={{interval}} selected="selected">
                    {{interval}}
                  </option>
                {{else}}
                  <option value={{interval}}>
                    {{interval}}
                  </option>
                {{/if}}
              {{/each}}
            </select>
          </div><div>
            <label for="dj-form-time">
              {{t "djinquiry.time"}}
            </label>
          </div><div>
            <Textarea name="dj-form-time" id="dj-form-time" @value={{model.desiredTime}} />
            {{#if model.errors.desiredTime}}
              {{#each model.errors.desiredTime as |error|}}
                <div class="error">
                  <span>
                    {{error.message}}
                  </span>
                </div>
              {{/each}}
            {{/if}}
          </div><div>
            <label for="dj-form-other">
              {{t "djinquiry.other"}}
            </label>
          </div><div>
            <Textarea name="dj-form-other" id="dj-form-other" @value={{model.otherComment}} />
          </div><div>
            <input
              type="submit"
              value="Send"
              class="cool-button"
              disabled={{model.isSaving}}
            >
          </div>
        </form>
      </div>
    {{else}}
      <div>
        <img src="/assets/images/thanks.gif" alt={{t "thanks"}}>
        <br>
        {{t "djinquiry.thanks"}}
      </div>
    {{/if}}
  </div>
</div>
