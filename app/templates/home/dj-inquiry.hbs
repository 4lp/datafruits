{{title (t "djinquiry.title")}}
<h1>
  <img class="inline" src={{random-loading-spinner}} alt={{t "loading"}}>
  {{t "djinquiry.heading"}}
  <img class="inline" src={{random-loading-spinner}} alt={{t "loading"}}>
</h1>
<div>
  <p>
    {{t "djinquiry.description"}}
  </p>
  {{#if model.isNew}}
    <p>
      {{#if model.errors}}
        <div class="error-message">
          {{t "djinquiry.error"}}
        </div>
      {{/if}}
      <form {{action "submit" on="submit"}}>
        <div>
          <label>
            {{t "djinquiry.email"}}
          </label>
          <br>
          <Input @value={{model.email}} />
          {{#if model.errors.email}}
            {{#each model.errors.email as |error|}}
              <div class="error">
                <span>
                  {{error.message}}
                </span>
              </div>
            {{/each}}
          {{/if}}
        </div>
        <div>
          <label>
            {{t "djinquiry.username"}}
          </label>
          <br>
          <Input @value={{model.username}} />
          {{#if model.errors.username}}
            {{#each model.errors.username as |error|}}
              <div class="error">
                <span>
                  {{error.message}}
                </span>
              </div>
            {{/each}}
          {{/if}}
        </div>
        <div>
          <label>
            {{t "djinquiry.link_to_mix"}}
          </label>
          <br>
          <Input @value={{model.link}} />
          {{#if model.errors.link}}
            {{#each model.errors.link as |error|}}
              <div class="error">
                <span>
                  {{error.message}}
                </span>
              </div>
            {{/each}}
          {{/if}}
        </div>
        <div>
          <label>
            {{t "djinquiry.homepage_url"}}
          </label>
          <br>
          <Input @value={{model.homepageUrl}} />
        </div>
        <div>
          <label>
            {{t "djinquiry.interval"}}
          </label>
          <br>
          <select onchange={{action "setInterval"}} value="target.value">
            {{#each intervals as |interval|}}
              {{#if (eq model.interval interval)}}
                <option value={{interval}} selected="selected">
                  {{interval}}
                </option>
              {{else}}
                <option value={{interval}}>
                  {{interval}}
                </option>
              {{/if}}
            {{/each}}
          </select>
        </div>
        <div>
          <label>
            {{t "djinquiry.time"}}
          </label>
          <br>
          <Textarea @value={{model.desiredTime}} />
          {{#if model.errors.desiredTime}}
            {{#each model.errors.desiredTime as |error|}}
              <div class="error">
                <span>
                  {{error.message}}
                </span>
              </div>
            {{/each}}
          {{/if}}
        </div>
        <div>
          <label>
            {{t "djinquiry.other"}}
          </label>
          <br>
          <Textarea @value={{model.otherComment}} />
        </div>
        <div>
          I accept the COC.
        </div>
        <div>
          <input
            type="submit"
            value="Send"
            class="cool-button"
            disabled={{model.isSaving}}
          >
        </div>
      </form>
    </p>
  {{else}}
    <p>
      <img src="/assets/images/thanks.gif" alt={{t "thanks"}}>
      <br>
      {{t "djinquiry.thanks"}}
    </p>
  {{/if}}
</div>
