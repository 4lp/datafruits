{{title model.title}}
<div class="main-content">
  <h1 class="modal-title" id="myModalLabel">{{model.title}}</h1>
  <h2 class="modal-title" id="myModalLabel">{{format-date model.start}}</h2>
  <div class="modal-body">
    {{#if model.thumbImageUrl}}
      <div class="show-image">
        <img src="{{model.thumbImageUrl}}"/ >
      </div>
    {{/if}}
    <p>
      {{html-safe-string model.htmlDescription}}
    </p>
    {{#if model.tracks}}
      <h2>{{ t "show.archive"}}</h2>
    {{/if}}
    {{#each model.tracks as |track|}}
      {{podcast-track
        cdnUrl=track.cdnUrl title=track.title labels=track.labels
        selectLabel=(action "browseLabel")}}
    {{/each}}
  </div>
  <div class="modal-footer">
    {{tweet-button data-text=model.tweetContent}}
  </div>
</div>
